{
  "name": "monorepo",
  "version": "1.0.0",
  "description": "",
  "workspaces": [
    "packages/**"
  ],
  "private": true,
  "scripts": {
    "prettier": "prettier --config .prettierrc --write {.,components,lib,pages}/*.{js,css,json,md}",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "verdaccio": "verdaccio",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:publish": "lerna publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint"
    ],
    "*.{js,css,json,md}": [
      "npm run prettier"
    ]
  },
  "author": "Zhang.Yingzi",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@commitlint/config-lerna-scopes": "^16.0.0",
    "commitlint": "^16.1.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lerna-changelog": "^2.2.0",
    "prettier": "^2.5.1"
  }
}
